<div class="product-container">
    <div class="product-image-section">
        {{#if product.thumbnails.[0]}}
            <img src="{{product.thumbnails.[0]}}" alt="{{product.title}}" class="detail-image">
        {{else}}
            <img src="/images/default.jpg" alt="Imagen no disponible" class="detail-image">
        {{/if}}
    </div>

    <div class="product-info-section">
        <h1>{{product.title}}</h1>
        <hr>
        <p class="description">{{product.description}}</p>
        <p class="category">Categoría: <strong>{{product.category}}</strong></p>
        <p class="stock">Stock disponible: {{product.stock}}</p>
        <p class="price">Precio: ${{product.price}}</p>

        <div class="actions">
            <button onclick="addToCart('{{product._id}}')" class="btn-add">Agregar al Carrito</button>
            <button onclick="window.location.href='/products'" class="btn-back">Volver a la tienda</button>
        </div>
    </div>
</div>

<script>
    let cartId = null;
    async function initSession() {
        try {
            const response = await fetch('/api/sessions/current');
            if (response.ok) {
                const data = await response.json();
                cartId = data.payload.cart._id || data.payload.cart;
                console.log("Sesión activa en detalle. Carrito:", cartId);
            } else {
                console.warn("Usuario no logueado. El carrito no funcionará.");
            }
        } catch (error) {
            console.error("Error al obtener sesión:", error);
        }
    }

    // Función para agregar este producto específico al carrito real
    async function addToCart(productId) {
        if (!cartId) {
            alert("Debes iniciar sesión para agregar productos al carrito.");
            window.location.href = '/login';
            return;
        }

        try {
            const response = await fetch(`/api/carts/${cartId}/products/${productId}`, { 
                method: "POST",
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                alert("¡Producto añadido con éxito!");
            } else {
                const err = await response.json();
                alert("Error: " + (err.error || "No se pudo agregar el producto"));
            }
        } catch (error) {
            console.error("Error en la petición:", error);
            alert("Error de conexión al agregar al carrito.");
        }
    }

    initSession();
</script>

<style>
    .product-container { display: flex; gap: 40px; padding: 20px; max-width: 900px; margin: auto; }
    .detail-image { width: 100%; max-width: 400px; border-radius: 8px; }
    .price { font-size: 24px; color: #28a745; font-weight: bold; }
    .btn-add { background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; }
    .btn-back { background-color: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; margin-left: 10px; }
    .btn-add:hover { background-color: #0056b3; }
</style>